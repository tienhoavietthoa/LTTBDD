<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/bg_cart_item_rounded"
    android:gravity="center_vertical"
    android:layout_marginBottom="12dp"
    android:elevation="2dp">

    <!-- Ảnh sản phẩm bên trái -->
    <ImageView
        android:id="@+id/cartItemImage"
        android:layout_width="82dp"
        android:layout_height="83dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/bg_item_image_glass"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <!-- Thông tin bên phải -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/cartItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đắc Nhân Tâm"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#222"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium" />

        <!-- Giá và tùy chỉnh trên cùng 1 dòng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <!-- Giá tiền -->
            <TextView
                android:id="@+id/cartItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120000 đ"
                android:textColor="#222"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Nút giảm -->
            <ImageButton
                android:id="@+id/btnDecrease"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_round_button"
                android:src="@drawable/ic_remove"
                android:contentDescription="Giảm"
                android:tint="#43A047"
                android:layout_marginEnd="4dp"
                tools:ignore="UseAppTint" />

            <!-- Số lượng (dùng cho logic) -->
            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="1"
                android:textSize="16sp"
                android:textColor="#208C47"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/bg_quantity_box"
                android:layout_marginHorizontal="2dp" />

            <!-- Nút tăng -->
            <ImageButton
                android:id="@+id/btnIncrease"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_round_button"
                android:src="@drawable/ic_add"
                android:contentDescription="Tăng"
                android:tint="#43A047"
                android:layout_marginStart="4dp"
                tools:ignore="UseAppTint" />

            <!-- Nút xóa -->
            <ImageButton
                android:id="@+id/btnRemove"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_round_button_danger"
                android:src="@drawable/ic_delete"
                android:contentDescription="Xóa"
                android:tint="#fff"
                android:layout_marginStart="8dp"
                tools:ignore="UseAppTint" />
        </LinearLayout>

        <!-- Số lượng kiểu xN nếu vẫn cần (ẩn hoặc hiển thị theo nhu cầu logic) -->
        <TextView
            android:id="@+id/cartItemQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1"
            android:textSize="13sp"
            android:textColor="#6BCB77"
            android:paddingTop="2dp"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>