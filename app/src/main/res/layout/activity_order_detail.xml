<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Thông tin đơn hàng -->
        <TextView
            android:id="@+id/tvOrderDetailId"
            android:text="Mã đơn: #123"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvOrderDetailDate"
            android:text="Ngày đặt: 2025-07-01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvOrderDetailName"
            android:text="Tên người nhận: Nguyễn Văn A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvOrderDetailPhone"
            android:text="SĐT: 0123456789"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvOrderDetailAddress"
            android:text="Địa chỉ: 123 Đường ABC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvOrderDetailPayment"
            android:text="Thanh toán: Trả tiền khi nhận hàng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvOrderDetailTotal"
            android:text="Tổng tiền: 240000đ"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <!-- Danh sách sản phẩm -->
        <TextView
            android:text="Sản phẩm:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerOrderProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>
</ScrollView>